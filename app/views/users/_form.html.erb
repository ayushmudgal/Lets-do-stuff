<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  <div class="form-inputs">
    <%= f.input :age %>
  </div>

  <div class="form-actions">
    <%= f.input :location %>
  </div>

  <div class="form-actions">
    <%= f.input :hobbies %>
  </div>

  <div class="form-actions">
    <%= f.input :about_me %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

